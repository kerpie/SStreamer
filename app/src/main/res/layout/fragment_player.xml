    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="co.herovitamin.sstreamer.fragments.PlayerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="3dp"
                tools:text="Mago de Oz"/>
            <TextView
                android:id="@+id/album_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="3dp"
                tools:text="Finisterra"/>
            <ImageView
                android:id="@+id/album_image"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:background="@color/colorPrimary"/>
            <TextView
                android:id="@+id/song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="3dp"
                tools:text="Finisterra"/>
            <SeekBar
                android:id="@+id/song_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:progress="75"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="1"
                android:columnCount="2">
                <TextView
                    android:id="@+id/song_initial_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    tools:text="0:00"/>
                <TextView
                    android:id="@+id/song_final_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    tools:text="15:00"/>
            </GridLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/song_previous"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_heigth"
                    android:layout_alignParentLeft="true"
                    android:src="@android:drawable/ic_media_previous"/>
                <ImageButton
                    android:id="@+id/song_play_pause"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_heigth"
                    android:layout_centerHorizontal="true"
                    android:src="@android:drawable/ic_media_play" />
                <ImageButton
                    android:id="@+id/song_next"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_heigth"
                    android:layout_alignParentRight="true"
                    android:src="@android:drawable/ic_media_next" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

